class group_t extends monoid_t {
  inv(x: elem_t): eqv_t(mul(id, x), x)
  left_inv(x: elem_t): eqv_t(mul(inv(x), x), id)
  right_inv(x: elem_t): eqv_t(mul(x, inv(x)), id)

  div(x: elem_t, y: elem_t): elem_t = mul(x, inv(y))
}

class group_hom_t {
  G: group_t
  H: group_t

  hom(G.elem_t): H.elem_t
  hom_respect_mul(x: G.elem_t, y: G.elem_t): eqv_t(
    hom(G.mul(x, y)),
    H.mul(hom(x), hom(y)))
}

id_group_hom(G: group_t): group_hom_t = new group_hom_t(
  G, G,
  (x: G.elem_t): G.elem_t => x,
  (x: G.elem_t, y: G.elem_t): TODO => same(G.mul(x, y)),
)

group_category: category_t = new category_t(
  group_t,
  group_hom_t,
  id_group_hom,

  (f: group_hom_t(G, H), g: group_hom_t(H, K)): TODO => group_hom_t(
    G, K,
    (x: G.elem_t): TODO => { g.hom(f.hom(x)) },
    (x: G.elem_t, y: G.elem_t): TODO => same(g.hom(H.mul(f.hom(x), f.hom(y))))),

  (f: group_hom_t(G, H)): TODO => same(f),
  (f: group_hom_t(G, H)): TODO => same(f),

  (f: group_hom_t(a, b), g: group_hom_t(b, c), h: group_hom_t(c, d)): TODO => refl
)
