add(x y: Nat): Nat {
  nat_rec(y, x, (prev, almost) { add1(almost) })
}

mul(x y: Nat): Nat {
  nat_rec(y, 0, (prev, almost) { add(almost, x) })
}

pow(x y: Nat): Nat {
  nat_rec(y, 1, (prev, almost) { mul(almost, x) })
}

eight =
  four = add(2, 2)
  add(four, four)

the(Equal(Nat, eight, pow(2, 3)), same)
