add(x: Nat, y: Nat): Nat {
  nat_ind(y, (_) => Nat, x, (prev, almost) => add1(almost))
}

mul(x: Nat, y: Nat): Nat {
  nat_ind(y, (_) => Nat, 0, (prev, almost) => add(almost, x))
}

pow(x: Nat, y: Nat): Nat {
  nat_ind(y, (_) => Nat, 1, (prev, almost) => mul(almost, x))
}

eight =
  four = add(2, 2)
  add(four, four)

the(Equal(Nat, eight, pow(2, 3)), refl)
