function add(x: Nat, y: Nat): Nat {
  return nat_ind(y, (_) => Nat, x, (prev, almost) => add1(almost))
}

function mul(x: Nat, y: Nat): Nat {
  return nat_ind(y, (_) => Nat, 0, (prev, almost) => add(almost, x))
}

function pow(x: Nat, y: Nat): Nat {
  return nat_ind(y, (_) => Nat, 1, (prev, almost) => mul(almost, x))
}

let eight = {
  let four = add(2, 2)
  return add(four, four)
}

the(Equal(Nat, eight, pow(2, 3)), refl)
